<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Course" table="course" schema="crs">
        <id name="courseId">
            <column name="courseID" sql-type="char(10)" length="10"/>
        </id>
        <many-to-one class="pojo.Semester" name="semester" fetch="join" lazy="false" cascade="save-update">
            <column name="semesterID" sql-type="char(10)" length="10"/>
        </many-to-one>

        <property name="coursename">
            <column name="coursename" sql-type="varchar(200)" length="200" not-null="true"/>
        </property>
        <property name="credits">
            <column name="credits" sql-type="int" not-null="true"/>
        </property>

        <many-to-one class="pojo.Teacher" name="teacher" fetch="join" lazy="false" cascade="save-update">
            <column name="teacherID" sql-type="char(10)" length="10"/>
        </many-to-one>

        <property name="roomnum">
            <column name="roomnum" sql-type="char(10)" length="10" not-null="true"/>
        </property>
        <property name="weekday">
            <column name="weekday" sql-type="int" not-null="true"/>
        </property>
        <property name="shift">
            <column name="shift" sql-type="int" not-null="true"/>
        </property>

    </class>
</hibernate-mapping>