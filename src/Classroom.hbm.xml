<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Classroom" table="class" schema="crs">
        <id name="classId">
            <column name="classID" sql-type="char(10)" length="10"/>
        </id>
        <property name="numberofstudents">
            <column name="numberofstudents" sql-type="int" not-null="true"/>
        </property>
        <property name="numberofmales">
            <column name="numberofmales" sql-type="int" not-null="true"/>
        </property>
        <property name="numberoffemales">
            <column name="numberoffemales" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>