<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Student" table="student" schema="crs">
        <id name="studentId">
            <column name="studentID" sql-type="char(10)" length="10"/>
        </id>
        <property name="username">
            <column name="username" sql-type="char(50)" length="50" not-null="true"/>
        </property>
        <property name="passwords">
            <column name="passwords" sql-type="char(50)" length="50"/>
        </property>

        <many-to-one class="pojo.Classroom" name="classroom" fetch="join" lazy="false" cascade="save-update">
            <column name="classID" sql-type="char(10)" length="10"/>
        </many-to-one>

        <property name="fullname">
            <column name="fullname" sql-type="varchar(50)" length="50" not-null="true" />
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(3)" length="3" not-null="true"/>
        </property>

        <set inverse="false" name="registeredCourses" fetch="join" lazy="false" cascade="save-update"
             table="Course_Student" >
            <key>
                <column name="studentID" sql-type="char(10)" length="10"/>
            </key>
            <many-to-many entity-name="pojo.Course">
                <column name="courseID" sql-type="char(10)" length="10"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>